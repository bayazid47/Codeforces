#include<bits/stdc++.h>
#define fast() ios_base::sync_with_stdio(0),cin.tie(0),cout.tie(0)
#define endl "\n"
#define lli long long int
using namespace std;
         
void solve(){
        int n, a, b ;
        cin >> n >> a >> b;
        cout << (n + min(a, b) - 1)/(min(a, b)) << endl;
    }    
signed main(){
    fast();
    int t;
    cin >> t;
    while(t--)
        solve();
    return 0;
}
